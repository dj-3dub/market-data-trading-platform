{
  "id": null,
  "uid": "trading-overview",
  "title": "Trading Overview",
  "tags": ["trading", "devops", "portfolio"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Last Price (Strategy Engine)",
      "id": 1,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "strategy_last_price",
          "legendFormat": "Last Price",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Trades Executed (rate)",
      "id": 2,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "rate(strategy_trades_total[1m])",
          "legendFormat": "Trades / sec",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "API Request Rate by Status",
      "id": 3,
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "rate(api_requests_total[1m])",
          "legendFormat": "{{endpoint}} {{status}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "API Latency (p95)",
      "id": 4,
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(api_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95 latency",
          "refId": "A"
        }
      ]
    }
  ]
}
